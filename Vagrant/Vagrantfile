  config.vm.define "wef" do |cfg|
    configure_box(cfg, name: "gusztavvargadr/windows-server-2022-standard", local_filename: "wef.box", version: "2506.0.0")
    cfg.vm.hostname = "wef"
    cfg.vm.boot_timeout = 1200
    cfg.vm.communicator = "winrm"
    cfg.winrm.basic_auth_only = true
    # Harden WinRM timeouts/retries to avoid HTTPClient::ReceiveTimeoutError during provisioning
    cfg.winrm.timeout = 1800
    cfg.winrm.retry_limit = 60
    config.winrm.retry_delay = 20        # Seconds between retries
    cfg.winrm.transport = :plaintext

    # Stabilize WinRM service inside the guest before heavy provisioning
    cfg.vm.provision "shell", privileged: true, inline: <<-'PS', powershell_args: POWERSHELL_ARGS
      Write-Host "[WinRM] Adjusting WSMan settings (no restart)..."
      try { Set-Item -Path WSMan:\localhost\Service\MaxTimeoutms -Value 1800000 -ErrorAction SilentlyContinue } catch {}
      try { Set-Item -Path WSMan:\localhost\Shell\MaxIdleTimeout -Value 1800000 -ErrorAction SilentlyContinue } catch {}
      try { Set-Item -Path WSMan:\localhost\Service\AllowUnencrypted -Value $true -ErrorAction SilentlyContinue } catch {}
      try { Set-Item -Path WSMan:\localhost\Service\Auth\Basic -Value $true -ErrorAction SilentlyContinue } catch {}
      Write-Host "[WinRM] Done."
    PS
    cfg.vm.network :private_network, ip: "192.168.57.103", gateway: "192.168.57.1", dns: "192.168.57.102"

    cfg.vm.provision "shell", path: "scripts/fix-second-network.ps1", privileged: true, args: "-ip 192.168.57.103 -dns 8.8.8.8 -gateway 192.168.57.1", powershell_args: POWERSHELL_ARGS
