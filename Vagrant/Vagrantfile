    cfg.vm.provision "shell", path: "scripts/provision.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "reload"
    cfg.vm.provision "shell", path: "scripts/provision.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "reload"
    cfg.vm.provision "shell", path: "scripts/create-dns.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
