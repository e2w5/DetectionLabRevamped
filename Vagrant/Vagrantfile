    cfg.vm.provision "shell", inline: 'wevtutil el | Select-String -notmatch "Microsoft-Windows-LiveId" | Foreach-Object {wevtutil cl "$_"}', privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-wefsubscriptions.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-splunkuf.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-windows_ta.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-redteam.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-utilities.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-evtx-attack-samples.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "file", source: "files/choco-winpcap", destination: "choco-winpcap"
    cfg.vm.provision "shell", path: "scripts/install-choco-extras.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-osquery.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/configure-pslogstranscriptsshare.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", path: "scripts/install-autorunstowineventlog.ps1", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", inline: "Set-SmbServerConfiguration -AuditSmb1Access $true -Force", privileged: false, powershell_args: POWERSHELL_ARGS
    cfg.vm.provision "shell", inline: "Write-Host 'WEF Provisioning Complete!'", privileged: false, powershell_args: POWERSHELL_ARGS


    cfg.vm.provider "virtualbox" do |vb, override|
      vb.gui = true
